<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LKStudent.GrantsPage">
  
  <StackLayout Spacing="20" BackgroundColor="#EBEBEB" Padding="20, 20, 20, 20">
    <Label Text="Мои текущие достижения" FontSize="Large" TextColor="Black"/>

    <ListView ItemsSource="{StaticResource grants}">
      <ListView.Header>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" BackgroundColor="Gray" Padding="5, 5, 5, 5">
          <Label Text="Стипендия" FontSize="Small" TextColor="Black" HorizontalOptions="StartAndExpand"/>
          <Label Text="Сумма" FontSize="Small" TextColor="Black" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" BackgroundColor="{Binding rowColor}" Padding="5, 0, 5, 0">
              <Label Text="{Binding Name}" FontSize="Small" TextColor="Black" HorizontalOptions="Start"/>
              <Label Text="{Binding Cost}" FontSize="Small" TextColor="Black" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    
  </StackLayout>
  
</ContentPage>